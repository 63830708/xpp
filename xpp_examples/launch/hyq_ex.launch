<launch>
   
  <!-- Launch the general part of visualization -->
  <include file="$(find xpp_vis)/launch/xpp_vis.launch"></include>
  
  <!-- Upload HyQ URDF file to ros parameter server for rviz to find  --> 
  <param name="hyq_rviz_urdf_robot_description" command="$(find xacro)/xacro.py '$(find xpp_hyq_description)/urdf/hyq.urdf.xacro'"/>
  
  <!-- Converts Cartesian state to joint state and publish TFs to rviz  --> 
  <node name="urdf_visualizer_hyq4" pkg="xpp_vis_hyq" type="urdf_visualizer_hyq4" output="screen"/>
   
  <!-- Publish robot states from rosbag  --> 
  <node pkg="rosbag" type="play" name="rosbag" args="'$(find xpp_examples)/bags/hyq.bag'"/>
  
</launch>